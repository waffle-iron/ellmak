{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch app --exec npm run build:dev",
    "build:dev": "better-npm-run build-dev",
    "build": "better-npm-run build",
    "lint": "eslint .",
    "start": "better-npm-run start"
  },
  "betterScripts": {
    "start": {
      "command": "node dist/api.js"
    },
    "build-dev": {
      "command": "webpack --config config/webpack.config.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "build": {
      "command": "webpack --config config/webpack.config.js",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    }
  },
  "dependencies": {
    "argon2": "^0.14.1",
    "body-parser": "~1.15.2",
    "cli-color": "^1.1.0",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.1",
    "express": "~4.14.0",
    "express-jwt": "^5.1.0",
    "jsonwebtoken": "^7.2.1",
    "lodash": "^4.17.2",
    "moment": "^2.17.1",
    "moment-timezone": "^0.5.10",
    "mongodb": "^2.2.13",
    "morgan": "~1.7.0",
    "nodegit": "^0.16.0",
    "nodemailer": "^2.7.0",
    "redux": "^3.6.0",
    "winston": "^2.3.0",
    "ws": "^1.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-loader": "^6.2.9",
    "babel-plugin-transform-object-rest-spread": "^6.19.0",
    "babel-preset-es2015": "^6.18.0",
    "better-npm-run": "0.0.13",
    "debug": "^2.3.3",
    "eslint": "^3.11.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "webpack": "^1.14.0",
    "webpack-node-externals": "^1.5.4",
    "yargs": "^6.5.0"
  }
}
